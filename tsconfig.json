{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["./node_modules/**/*"]
}
